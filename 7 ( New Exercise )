#include <stdio.h>

int main() {
    int n, i, choice;
    float sum = 0, avg;
    
    printf("Enter number of elements: ");
    scanf("%d", &n);
    
    int arr[n];
    
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    printf("\nChoose operation:\n");
    printf("1. Sum of elements\n");
    printf("2. Average of elements\n");
    printf("3. Largest element\n");
    printf("4. Smallest element\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);
    
    if (choice == 1) {
        sum = 0;
        for (i = 0; i < n; i++)
            sum += arr[i];
        printf("Sum of elements = %.2f\n", sum);
    }
    else if (choice == 2) {
        sum = 0;
        for (i = 0; i < n; i++)
            sum += arr[i];
        avg = sum / n;
        printf("Average of elements = %.2f\n", avg);
    }
    else if (choice == 3) {
        int largest = arr[0];
        for (i = 1; i < n; i++) {
            if (arr[i] > largest)
                largest = arr[i];
        }
        printf("Largest element = %d\n", largest);
    }
    else if (choice == 4) {
        int smallest = arr[0];
        for (i = 1; i < n; i++) {
            if (arr[i] < smallest)
                smallest = arr[i];
        }
        printf("Smallest element = %d\n", smallest);
    }
    else {
        printf("Invalid choice!\n");
    }
    
    return 0;
}


Output :

Enter number of elements: 5
Enter 5 elements:
2 4 6 8 10
Choose operation:
1. Sum of elements
2. Average of elements
3. Largest element
4. Smallest element
Enter your choice: 1
Sum of elements = 30.00

Enter number of elements: 4
Enter 4 elements:
5 10 15 20
Enter your choice: 2
Average of elements = 12.50


Enter number of elements: 5
Enter 5 elements:
9 2 15 7 3
Enter your choice: 3
Largest element = 15


Enter number of elements: 5
Enter 5 elements:
9 2 15 7 3
Enter your choice: 4
Smallest element = 2

